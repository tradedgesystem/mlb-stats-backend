{
  "manifest_version": 3,
  "name": "MLB Stats Loader",
  "version": "0.1.0",
  "description": "Loads MLB player stats from a local FastAPI backend.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://cdn.jsdelivr.net/*"
  ]
}
